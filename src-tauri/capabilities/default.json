{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "dialog:default",
    "shell:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file"
  ]
}